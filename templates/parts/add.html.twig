<!-- Button to Open the Modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add_transaction_modal">
    Dodaj Tranzakcje
</button>
<!-- The Modal -->
<div class="modal fade" id="add_transaction_modal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Dodaj Tranzakcje</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body ">
                <form method="post">
                    <div class="form-group">
                        <labe for="tr_date">Data:</labe>
                        <div class='input-group date' id='tr_date_div'>
                            <input type='text' value="{{ date }}" required="required" class="form-control" id='tr_date' />
                        </div>

                    </div>

                    <div class="form-group">
                        <label for="tr_dsc">Opis:</label>
                        <input id="tr_dsc" class="form-control" type="text" placeholder="np. kanapka w subway" required="required"/>
                    </div>

                    <div class="form-group">
                        <label for="ctgr">Kategoria:</label>
                        <select class="form-control" name="category" id="ctgr" required="required">

                        </select>
                    </div>

                    <div class="form-group">
                        <label for="subctgr">Podkategoria:</label>
                        <select class="form-control" name="subcategory" id="subctgr" disabled="disabled">
                            <option>inne</option>
                        </select>
                    </div>

                    <div class="form-group">

                        <label for="tr-val">Kwota:</label>
                        <div class="input-group">

                            <input id="tr-val" class="form-control" type="number" required="required" placeholder="np. 14,24zl" min="0.01" step="0.01"/>
                            <span class="input-group-addon">zł</span>
                        </div>

                    </div>
                    <input type="button" class="btn btn-primary" id="add_transaction" value="Prześlij">

                </form>
            </div>



        </div>
    </div>
</div>